<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Coupons</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <%- include("../partials/user/account-sidebar") %>

    <link rel="stylesheet" href="../../styles/user/coupon.css">
</head>
<body>
    <div class="main-content">
        <div class="breadcrumb-container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/profile">My Account</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Coupons</li>
                </ol>
            </nav>
        </div>
        <div class="page-header fade-in">
            <h1><i class="fas fa-ticket-alt"></i> My Coupons</h1>
            <p>Here are the coupons available for you.</p>
        </div>

        <!-- Available Coupons -->
        <div class="card-light p-4 fade-in">
            <h2 class="section-title"><i class="fas fa-list"></i> Available Coupons</h2>
            <% if (coupons && coupons.length > 0) { %>
                <div class="row">
                    <% coupons.forEach(coupon => { 
                        // Determine coupon status
                        let status = 'active';
                        let statusClass = 'status-active';
                        let statusIcon = 'fas fa-check-circle';
                        
                        const currentDate = new Date();
                        const expiryDate = coupon.expiry ? new Date(coupon.expiry) : null;
                        const startDate = coupon.startDate ? new Date(coupon.startDate) : null;
                        
                        // Normalize dates to compare only date part (ignore time)
                        const today = new Date(currentDate.getFullYear(), currentDate.getMonth(), currentDate.getDate());
                        const couponStartDate = startDate ? new Date(startDate.getFullYear(), startDate.getMonth(), startDate.getDate()) : null;
                        const couponExpiryDate = expiryDate ? new Date(expiryDate.getFullYear(), expiryDate.getMonth(), expiryDate.getDate()) : null;
                        
                        // Check if coupon is not yet active (start date is in the future)
                        if (couponStartDate && couponStartDate > today) {
                            status = 'not active';
                            statusClass = 'status-not-active';
                            statusIcon = 'fas fa-hourglass-start';
                        }
                        // Check if coupon is expired
                        else if (couponExpiryDate && today > couponExpiryDate) {
                            status = 'expired';
                            statusClass = 'status-expired';
                            statusIcon = 'fas fa-clock';
                        } 
                        // Check if coupon has reached its total usage limit
                        else if (coupon.usageLimit && coupon.usedCount >= coupon.usageLimit) {
                            status = 'used';
                            statusClass = 'status-used';
                            statusIcon = 'fas fa-times-circle';
                        }
                        // Check if user has exceeded their individual usage limit
                        else if (coupon.isUserLimitExceeded) {
                            status = 'unavailable';
                            statusClass = 'status-unavailable';
                            statusIcon = 'fas fa-ban';
                        }
                    %>
                        <div class="col-lg-4">
                            <div class="coupon-card <%= coupon.isUserSpecific ? 'user-specific-coupon' : '' %>">
                                <div class="coupon-header">
                                    <div class="coupon-code-section">
                                        <div class="coupon-code" id="code-<%= coupon._id %>"><%= coupon.code %></div>
                                        <button class="copy-btn" onclick="copyCouponCode('<%= coupon.code %>', '<%= coupon._id %>')">
                                            <i class="fas fa-copy"></i>
                                            <span>Copy</span>
                                        </button>
                                    </div>
                                    <div class="coupon-status <%= statusClass %>">
                                        <i class="<%= statusIcon %>"></i>
                                        <%= status %>
                                    </div>
                                </div>

                                <div class="coupon-description">
                                    <%= coupon.description || 'Get discount on your order' %>
                                </div>

                                <div class="discount-highlight">
                                    <% if (coupon.discount && coupon.discount > 0) { %>
                                        <% if (coupon.discountType === 'percentage') { %>
                                            <%= coupon.discount %>% OFF
                                        <% } else if (coupon.discountType === 'flat') { %>
                                            ₹<%= coupon.discount %> OFF
                                        <% } else { %>
                                            <%= coupon.discount %>% OFF
                                        <% } %>
                                    <% } else { %>
                                        SPECIAL DISCOUNT
                                    <% } %>
                                </div>

                                <div class="coupon-details-grid">
                                    <div class="detail-item">
                                        <div class="detail-label">Minimum Purchase</div>
                                        <div class="detail-value">
                                            <% if (coupon.minPurchase && coupon.minPurchase > 0) { %>
                                                <i class="fas fa-shopping-cart"></i>
                                                ₹<%= coupon.minPurchase.toLocaleString('en-IN') %>
                                            <% } else { %>
                                                <i class="fas fa-gift"></i>
                                                No minimum
                                            <% } %>
                                        </div>
                                    </div>

                                    <div class="detail-item">
                                        <div class="detail-label">Validity</div>
                                        <div class="detail-value">
                                            <% if (coupon.expiry) { %>
                                                <div class="validity-indicator <%= status === 'expired' ? 'expired' : 'valid' %>">
                                                    <i class="fas fa-calendar-alt"></i>
                                                    <%= new Date(coupon.expiry).toLocaleDateString('en-IN', { 
                                                        day: '2-digit', 
                                                        month: 'short', 
                                                        year: 'numeric' 
                                                    }) %>
                                                </div>
                                            <% } else { %>
                                                <div class="validity-indicator valid">
                                                    <i class="fas fa-infinity"></i>
                                                    No expiry
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>

                                    <div class="detail-item">
                                        <div class="detail-label">Usage Limit</div>
                                        <div class="detail-value">
                                            <% if (coupon.userUsageLimit && coupon.userUsageLimit > 0) { %>
                                                <i class="fas fa-user"></i>
                                                <%= coupon.userUsageLimit %> per user
                                            <% } else { %>
                                                <i class="fas fa-infinity"></i>
                                                Unlimited
                                            <% } %>
                                        </div>
                                    </div>

                                    <div class="detail-item">
                                        <div class="detail-label">Discount Type</div>
                                        <div class="detail-value">
                                            <% if (coupon.discountType === 'percentage') { %>
                                                <i class="fas fa-percentage"></i>
                                                Percentage
                                            <% } else if (coupon.discountType === 'flat') { %>
                                                <i class="fas fa-rupee-sign"></i>
                                                Fixed Amount
                                            <% } else { %>
                                                <i class="fas fa-tag"></i>
                                                Special Offer
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-ticket-alt"></i>
                    <h3>No Coupons Available</h3>
                    <p>You have no coupons at the moment. Check back later!</p>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
    
    <!-- Toast notification element -->
    <div id="copyToast" class="toast">
        <i class="fas fa-check-circle"></i>
        <span id="toastMessage">Coupon code copied!</span>
    </div>

    <script>
        // Function to copy coupon code to clipboard
        function copyCouponCode(code, couponId) {
            // Create a temporary textarea element to copy text
            const tempTextArea = document.createElement('textarea');
            tempTextArea.value = code;
            document.body.appendChild(tempTextArea);
            tempTextArea.select();
            tempTextArea.setSelectionRange(0, 99999); // For mobile devices
            
            try {
                // Copy the text
                document.execCommand('copy');
                
                // Show success toast
                showToast(`Coupon code "${code}" copied to clipboard!`);
                
                // Update button text temporarily
                const button = document.querySelector(`button[onclick*="${couponId}"]`);
                const originalText = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check"></i><span>Copied!</span>';
                button.style.background = '#28a745';
                
                // Reset button after 2 seconds
                setTimeout(() => {
                    button.innerHTML = originalText;
                    button.style.background = '';
                }, 2000);
                
            } catch (err) {
                console.error('Failed to copy text: ', err);
                showToast('Failed to copy coupon code', 'error');
            }
            
            // Remove the temporary element
            document.body.removeChild(tempTextArea);
        }

        // Function to show toast notification
        function showToast(message, type = 'success') {
            const toast = document.getElementById('copyToast');
            const toastMessage = document.getElementById('toastMessage');
            
            toastMessage.textContent = message;
            
            if (type === 'error') {
                toast.style.background = '#dc3545';
            } else {
                toast.style.background = '#28a745';
            }
            
            toast.classList.add('show');
            
            // Hide toast after 3 seconds
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // Modern clipboard API fallback (for newer browsers)
        async function copyToClipboardModern(text) {
            try {
                await navigator.clipboard.writeText(text);
                return true;
            } catch (err) {
                return false;
            }
        }

        // Enhanced copy function with modern API support
        async function copyCouponCodeEnhanced(code, couponId) {
            let success = false;
            
            // Try modern clipboard API first
            if (navigator.clipboard && window.isSecureContext) {
                success = await copyToClipboardModern(code);
            }
            
            // Fallback to older method
            if (!success) {
                const tempTextArea = document.createElement('textarea');
                tempTextArea.value = code;
                tempTextArea.style.position = 'fixed';
                tempTextArea.style.left = '-999999px';
                tempTextArea.style.top = '-999999px';
                document.body.appendChild(tempTextArea);
                tempTextArea.focus();
                tempTextArea.select();
                
                try {
                    success = document.execCommand('copy');
                } catch (err) {
                    console.error('Fallback copy failed:', err);
                }
                
                document.body.removeChild(tempTextArea);
            }
            
            if (success) {
                showToast(`Coupon code "${code}" copied to clipboard!`);
                
                // Update button visual feedback
                const button = document.querySelector(`button[onclick*="${couponId}"]`);
                if (button) {
                    const originalText = button.innerHTML;
                    button.innerHTML = '<i class="fas fa-check"></i><span>Copied!</span>';
                    button.style.background = '#28a745';
                    
                    setTimeout(() => {
                        button.innerHTML = originalText;
                        button.style.background = '';
                    }, 2000);
                }
            } else {
                showToast('Failed to copy coupon code. Please copy manually.', 'error');
            }
        }
    </script>
</body>
</html>