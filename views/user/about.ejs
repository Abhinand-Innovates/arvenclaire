    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Video handling
            const video = document.querySelector('.main-video');
            if (video) {
                video.addEventListener('loadeddata', function() {
                    video.play().catch(e => console.log('Video autoplay prevented'));
                });
            }

            // Animate stats on scroll
            const observerOptions = {
                threshold: 0.5,
                rootMargin: '0px 0px -100px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        if (entry.target.classList.contains('hero-stats')) {
                            animateStats();
                        }
                        entry.target.classList.add('animate-in');
                    }
                });
            }, observerOptions);

            // Observe elements for animation
            const animatedElements = document.querySelectorAll('.hero-stats, .story-content, .story-image, .value-card, .service-item');
            animatedElements.forEach(el => {
                el.classList.add('animate-element');
                observer.observe(el);
            });

            // Animate statistics
            function animateStats() {
                const stats = [
                    { element: '.stat:nth-child(1) .stat-number', target: 15, suffix: '+' },
                    { element: '.stat:nth-child(2) .stat-number', target: 50, suffix: 'K+' },
                    { element: '.stat:nth-child(3) .stat-number', target: 100, suffix: '+' }
                ];

                stats.forEach(stat => {
                    const element = document.querySelector(stat.element);
                    if (element) {
                        animateNumber(element, 0, stat.target, stat.suffix, 2000);
                    }
                });
            }

            function animateNumber(element, start, end, suffix, duration) {
                const startTime = performance.now();
                
                function updateNumber(currentTime) {
                    const elapsed = currentTime - startTime;
                    const progress = Math.min(elapsed / duration, 1);
                    
                    const easeOutQuart = 1 - Math.pow(1 - progress, 4);
                    const current = Math.floor(start + (end - start) * easeOutQuart);
                    
                    element.textContent = current + suffix;
                    
                    if (progress < 1) {
                        requestAnimationFrame(updateNumber);
                    }
                }
                
                requestAnimationFrame(updateNumber);
            }

            // Smooth scroll for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });

            console.log('ArvenClaire About Page loaded successfully');
        });
    </script>
