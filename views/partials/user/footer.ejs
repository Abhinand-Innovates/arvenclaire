            }

            .newsletter-input::placeholder {
                font-size: 0.9rem;
            }

            .newsletter-btn {
                padding: 0.875rem 1rem;
                font-size: 0.95rem;
                border-radius: 0 0 8px 8px;
            }
        }

        /* Extra small screens */
        @media (max-width: 360px) {
            .newsletter-section {
                padding: 0.5rem;
                margin: 0 -0.25rem;
            }

            .newsletter-input {
                padding: 0.75rem 0.875rem;
                font-size: 0.9rem;
            }

